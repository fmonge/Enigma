%macro rotarBufIzq 2 ; buffer (de Tama単o 26) , cantidad de rotaciones
        push rcx 
        push r8
        push rdi 
        push rsi 
	xor rcx, rcx

	mov rcx, 26
        mov r8, %2 
        movBuf bufTmp, %1
        sub rcx, %2	
        lea rsi, [bufTmp + %2]  
        lea rdi, [%1]
        rep movsb
	lea rsi, [bufTmp]
        xor rcx, rcx 
        mov rcx, %2
        rep movsb
    

        pop rsi 
        pop rdi 
        pop r8
        pop rcx 
%endmacro

