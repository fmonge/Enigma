%macro movBuf 2 ; copia un buffer de tama単o rcx a otro de igual tama単o
	push rcx
        lea rdi, [%1]
        lea rsi, [%2]
        rep movsb
        pop rcx
      ;  ret
%endmacro


%macro exit 0

        xor rsi, rsi
        mov rax, sys_write
        mov rdi, std_out
        mov rsi, 0x0A
        mov rdx, 1
	syscall
        mov rax, sys_exit
        mov rdi, 0              ; return 0, success
        syscall

%endmacro
