%define sys_read 0
%define sys_write 1 
%define std_in 1
%define std_out 1
%define	std_err 2
%define sys_exit 60


; std_out & std_in

	
%macro print 2  ; mensaje , lenMensaje
        push rax
	push rdi
        push rsi
        push rdx

        mov rax, sys_write
        mov rdi, std_out
        mov rsi, %1
        mov rdx, %2
        syscall

        pop rdx
        pop rsi
        pop rdi
        pop rax
%endmacro

